<% layout('layouts/boilerplate') %>
<section class="form-wrapper">
  <h1>Create Task</h1>
  <form action="/tasks" method="POST" class="form-card">
    <label for="title">Title *</label>
    <input id="title" type="text" name="task[title]" required />

    <label for="description">Description</label>
    <textarea id="description" name="task[description]"></textarea>

    <label for="priority">Priority</label>
    <select id="priority" name="task[priority]">
      <option value="Low">Low</option>
      <option value="Medium" selected>Medium</option>
      <option value="High">High</option>
    </select>

    <label for="deadline">Deadline</label>
    <input id="deadline" type="date" name="task[deadline]" />

    <input type="hidden" name="task[status]" value="Pending" />

    <button class="btn" type="submit">Create Task</button>
  </form>
</section>
